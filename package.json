{
  "name": "bettertimeline",
  "displayName": "Better Timeline",
  "publisher": "StevenDesroches",
  "description": "",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/StevenDesroches/Better-Timeline.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Better Timeline",
      "properties": {
        "betterTimeline.maxEntrySize": {
          "type": "integer",
          "default": 256,
          "description": "Max entry size in KB"
        },
        "betterTimeline.maxAllowedEntries": {
          "type": "integer",
          "default": 50,
          "description": "Max amount of entries allowed to exists for a given file"
        },
        "betterTimeline.insertingEntryDelay": {
          "type": "integer",
          "default": 500,
          "description": "Delay in microseconds before inserting a new entry in the timeline"
        }
      }
    },
    "viewsWelcome": [
      {
        "view": "betterTimelineTreeView",
        "contents": "No Changes"
      }
    ],
    "views": {
      "betterTimeline-explorer": [
        {
          "id": "betterTimelineTreeView",
          "name": "Timeline",
          "contextualTitle": ""
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "betterTimeline-explorer",
          "title": "Better Timeline Explorer",
          "icon": "resources/tree.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "bettertimeline.clear.all",
          "group": "navigation",
          "when": "view == betterTimelineTreeView"
        },
        {
          "command": "bettertimeline.clear",
          "group": "navigation",
          "when": "view == betterTimelineTreeView"
        }
      ]
    },
    "commands": [
      {
        "command": "bettertimeline.compare",
        "title": "BetterTimeline: Compare"
      },
      {
        "command": "bettertimeline.clear",
        "title": "BetterTimeline: Clear",
        "icon": {
          "light": "resources/light/clear.svg",
          "dark": "resources/dark/clear.svg"
        }
      },
      {
        "command": "bettertimeline.clear.all",
        "title": "BetterTimeline: Clear All",
        "icon": {
          "light": "resources/light/clearAll.svg",
          "dark": "resources/dark/clearAll.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "base32": "^0.0.7",
    "moment": "^2.30.1"
  }
}